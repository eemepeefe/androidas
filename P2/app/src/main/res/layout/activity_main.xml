<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:orientation="vertical"
    android:id="@+id/mainlayout"
    android:background="@drawable/fondo_1"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="130dp">

        <TextView
            android:id="@+id/titulo"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="¿De quién es la canción?"
            android:textColor="@android:color/white"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/totalpreguntas"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"

            android:layout_marginStart="0dp"
            android:layout_marginTop="38dp"
            android:text="Pregunta actual/Total de preguntas"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/aciertosfallos"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="60dp"
            android:text="Aciertos:  Fallos:"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <Chronometer
            android:id="@+id/chronometer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="136dp"
            android:layout_marginTop="90dp"
            android:background="#000000"
            android:padding="10dp"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="321dp"
        android:layout_height="83dp"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="10dp">

        <Button
            android:id="@+id/playbutton"
            android:layout_width="107dp"
            android:layout_height="63dp"

            android:layout_alignParentRight="true"

            android:background="@drawable/boton"
            android:text="Play"

            android:textColor="@drawable/txt_boton" />

        <Button

            android:id="@+id/pausebutton"
            android:layout_width="103dp"
            android:layout_height="63dp"

            android:layout_alignParentRight="true"

            android:background="@drawable/boton"
            android:text="Pause"

            android:textColor="@drawable/txt_boton" />

        <Button
            android:id="@+id/stopbutton"
            android:layout_width="98dp"
            android:layout_height="62dp"

            android:layout_alignParentRight="true"

            android:background="@drawable/boton"
            android:text="Stop"

            android:textColor="@drawable/txt_boton" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="270dp"
        android:layout_height="100dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="40dp">

        <Button
            android:id="@+id/answer1"
            android:layout_width="120dp"
            android:layout_height="80dp"

            android:layout_alignParentRight="true"

            android:background="@drawable/boton"
            android:text="Answer 1"

            android:textColor="@drawable/txt_boton" />

        <Button
            android:id="@+id/answer2"
            android:layout_width="120dp"
            android:layout_height="80dp"

            android:layout_alignParentRight="true"

            android:background="@drawable/boton"
            android:text="Answer 2"

            android:textColor="@drawable/txt_boton" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="270dp"
        android:layout_height="100dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp">


        <Button
            android:id="@+id/answer3"
            android:layout_width="120dp"
            android:layout_height="80dp"

            android:layout_alignParentRight="true"

            android:background="@drawable/boton"
            android:text="Answer 3"

            android:textColor="@drawable/txt_boton" />

        <Button
            android:id="@+id/answer4"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_alignParentRight="true"

            android:background="@drawable/boton"
            android:text="Answer 4"

            android:textColor="@drawable/txt_boton" />
    </LinearLayout>


</LinearLayout>